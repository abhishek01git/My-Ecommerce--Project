        <!-- Start product section -->
        <section class="product__section section--padding pt-0">

            <div class="container-fluid">
                <div class="categories mb-5">
                    <div class="row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-1">
                      <% if (categories && categories.length > 0) { %>
                         <% categories.forEach(category => { %>
                          <div class="col mb-4">
                            <div class="category-card">
                              <div class="category-card__thumbnail">
                                <img src="/uploads/<%= category.image  || 'https://example.com/uploads/default-category.jpg' %>" 
                                   alt="<%= category.name || 'Category' %>" 
                                  class="category-card__image">

                              </div>
                              
                              <div class="category-card__content">
                                <h3 class="category-card__title">
                                  <%= category.name || 'Category Name' %>
                                </h3>
                                <p class="category-card__description">
                                  <%= category.description || 'No description available.' %>
                                </p>
                                <a href="/products?category=<%= category._id %>" class="btn btn-primary">Shop Now</a>
                              </div>
                            </div>
                          </div>
                        <% }) %>
                      <% } else { %>
                        <p>No categories available at the moment.</p>
                      <% } %>
                    </div>
                  </div>
                  
                <div class="tab_content">
                    <div id="featured" class="tab_pane active show">
                        <div class="product__section--inner">
                            <div class="row row-cols-xl-5 row-cols-lg-4 row-cols-md-3 row-cols-2 mb--n30">
                                <% if (products && products.length > 0) { %>
                                    <% products.forEach(product => { %>
                                    <div class="col mb-30">
                                        <div class="product__items">
                                            <div class="product__items--thumbnail">
                                                <a class="product__items--link" href="/ProductDetails?id=<%= product._id %>">
                                                    <img class="product__items--img product__primary--img" 
                                                    src="<%= product.productImage && product.productImage[1] 
                                                    ? product.productImage[1] 
                                                    : '/uploads/default.jpg' %>" 
                                              alt="<%= product.productName || 'Product' %>">
        
        
                                               
                                                </a>
                                                <% if (product.isOnSale) { %>
                                                    <div class="product__badge">
                                                        <span class="product__badge--items sale">Sale</span>
                                                    </div>
                                                <% } %>
                                            </div>
                                            <div class="product__items--content">
                                                <span class="product__items--content__subtitle"><%= product.description || 'No description available' %></span>
                                                <h3 class="product__items--content__title h4">
                                                    <a href="/ProductDetails?id=<%= product._id %>"><%= product.productName %></a>
                                                </h3>
                                                <div class="product__items--price">
                                                    <span class="current__price">Rs:<%= product.salePrice || '0.00' %></span>
                                                  
                                                        <span class="old__price">Rs:<%= product.regularPrice || 'N/A' %></span>
        
                                                   
                                                </div>
                                                <ul class="rating product__rating d-flex">
                                                    <% for (let i = 1; i <= 5; i++) { %>
                                                        <li class="rating__list">
                                                            <span class="rating__list--icon">
                                                                <svg class="rating__list--icon__svg" xmlns="http://www.w3.org/2000/svg" width="14.105" height="14.732" viewBox="0 0 10.105 9.732">
                                                                    <path data-name="star" d="M9.837,3.5,6.73,3.039,5.338.179a.335.335,0,0,0-.571,0L3.375,3.039.268,3.5a.3.3,0,0,0-.178.514L2.347,6.242,1.813,9.4a.314.314,0,0,0,.464.316L5.052,8.232,7.827,9.712A.314.314,0,0,0,8.292,9.4L7.758,6.242l2.257-2.231A.3.3,0,0,0,9.837,3.5Z" transform="translate(0 -0.018)" fill="currentColor"></path>
                                                                </svg>
                                                            </span>
                                                        </li>
                                                    <% } %>
                                                </ul>
                                                
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
