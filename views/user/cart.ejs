                                <li class="breadcrumb__content--menu__items"><span class="text-white">Shopping Cart</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
       
      
        <%
        let grandTotal = 0;
        cartItems.forEach(item => {
            grandTotal += item.price * item.quantity;
        });
