  <script src="/admin/nest-backend/assets/js/main.js"></script>
  <script>
    // JS to toggle sidebar
    document.getElementById('minimizeSidebar').addEventListener('click', function() {
      document.querySelector('.navbar-aside').classList.toggle('collapsed');
    });
  </script>
