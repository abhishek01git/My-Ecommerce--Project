<%- include("../../views/partials/admin/header") %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-60">
            <form method="post" action="/admin/editCategory/<%= category.id %>" enctype="multipart/form-data">
                
                <!-- Submit Button -->
                <div class="d-grid text-end mt-30 col-md-5">
                    <button class="btn btn-primary" type="submit">Update Category</button>
                </div>
                
                <!-- Category Name Field -->
                <div class="mb-4 mt-30">
                    <label for="product_name" class="form-label">Name</label>
                    <input type="text" name="categoryname" value="<%= category.name %>" class="form-control border" required />
                </div>
                
                <!-- Description Field -->
                <div class="mb-4">
                    <label class="form-label">Description</label>
                    <textarea name="description" class="form-control border" required><%= category.description %></textarea>
                </div>

                <!-- Image Display Section -->
                <div class="mb-4">
                    <label class="form-label">Category Image</label>
                    <% if (category.image) { %>
                        <div>
                            <p>Current Image:</p>
                            <img src="/uploads/<%= category.image %>" alt="Category Image" style="width: 150px; height: 150px; object-fit: cover;">
                        </div>
                    <% } else { %>
                        <p>No image uploaded.</p>
                    <% } %>
                    
                    <!-- Image Upload Field -->
                    <input type="file" name="image" class="form-control border" />
                </div>
            </form>
        </div>
    </div>
</div>
<%- include("../../views/partials/admin/footer") %>
